{
  "name": "calendar_scheduler",
  "description": "Schedules an action (donation, repair, upcycle) in the user's calendar.",
  "type": "REST",
  "endpoint": "https://30fa1d29b74f.ngrok-free.app/api/routes_actions/schedule",
  "method": "POST",
  "input": {
    "item_id": {
      "type": "integer",
      "description": "The ID of the wardrobe item"
    },
    "action": {
      "type": "string",
      "enum": ["donate", "repair", "upcycle"],
      "description": "The action to schedule"
    },
    "date": {
      "type": "string",
      "description": "Date in ISO format (YYYY-MM-DD)"
    }
  },
  "output": {
    "status": "string",
    "event": {
      "id": "string",
      "summary": "string",
      "date": "string",
      "status": "string"
    }
  }
}
