{
  "name": "donation_locator",
  "description": "Finds donation centers near a given location to donate clothes.",
  "type": "REST",
  "endpoint": "https://30fa1d29b74f.ngrok-free.app/api/routes_actions/donate",
  "method": "GET",
  "input": {
    "location": {
      "type": "string",
      "description": "City or address of the user"
    },
    "radius_km": {
      "type": "integer",
      "description": "Search radius in kilometers (default 5)"
    }
  },
  "output": {
    "status": "string",
    "count": "integer",
    "donation_centers": [
      {
        "name": "string",
        "address": "string",
        "rating": "number",
        "maps_url": "string"
      }
    ]
  }
}
