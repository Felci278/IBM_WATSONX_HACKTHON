      "status": {"type": "string"},
      "count": {"type": "integer"},
      "tailors": {
        "type": "array",
        "items": {"type": "object"}
      }
    }
  },
  "endpoint": {
    "url": "https://30fa1d29b74f.ngrok-free.app/api/routes_actions/repair",
    "method": "GET",
    "params": ["location", "radius_km"]
  }
}
