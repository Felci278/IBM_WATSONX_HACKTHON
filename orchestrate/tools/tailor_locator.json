{
  "name": "tailor_locator",
  "description": "Find nearby tailors or repair shops.",
  "input": {
    "type": "object",
    "properties": {
      "location": {
        "type": "string",
        "description": "User's location (address or city)"
      },
      "radius_km": {
        "type": "integer",
        "default": 5,
        "description": "Search radius in kilometers"
      }
    },
    "required": ["location"]
